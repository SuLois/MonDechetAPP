<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/myfragmentstyle"
    tools:context=".Scan.ScanFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_txtview"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Un emballage ?"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_txtviewright"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Tu veux t'en débarasser ?"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.70" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_txtview"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Scanne son code barre pour savoir où le jeter !"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/buttonCodeBarre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.70" />

    <Button
        android:id="@+id/buttonCodeBarre"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Code barre"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:theme="@style/mybuttonstyle"
        app:layout_constraintVertical_bias="0.90"
        app:layout_constraintBottom_toTopOf="@+id/buttonDetection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquer pour identifier un dechet"
        android:textColor="#BFA8BB"
        app:layout_constraintBottom_toTopOf="@+id/buttonDetection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />
-->
    <Button
        android:id="@+id/buttonDetection"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Reconnaissance d'objet"
        android:theme="@style/mybuttonstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>